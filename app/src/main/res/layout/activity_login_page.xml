<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.CommunityAlert.communityalert.activities.LoginPageActivity">

    <TextView
        android:id="@+id/loginPagePasswordTitle"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="10dp"
        android:text="Password:"
        app:layout_constraintBaseline_toBaselineOf="@+id/loginPagePasswordField"
        app:layout_constraintEnd_toStartOf="@+id/loginPagePasswordField"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/loginPagePasswordField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/loginPagePasswordTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.661" />

    <TextView
        android:id="@+id/loginPageUsernameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="32dp"
        android:text="Username:"
        app:layout_constraintBottom_toTopOf="@+id/loginPagePasswordField"
        app:layout_constraintEnd_toStartOf="@+id/editTextText3"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/loginPageUsernameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="320dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/loginPageUsernameTitle"
        app:layout_constraintTop_toBottomOf="@+id/loginPageLogo" />

    <TextView
        android:id="@+id/loginPageLocationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="8dp"
        android:text="Location:"
        app:layout_constraintBottom_toBottomOf="@+id/loginPageLocationField"
        app:layout_constraintEnd_toStartOf="@+id/loginPageLocationField"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/loginPageLocationField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="9dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/loginPageLocationTitle"
        app:layout_constraintTop_toBottomOf="@+id/loginPagePasswordField" />

    <ImageView
        android:id="@+id/loginPageLogo"
        android:layout_width="301dp"
        android:layout_height="351dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="42dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextText3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/communityalertlogotextpng" />

    <Button
        android:id="@+id/loginPageButton"
        android:layout_width="138dp"
        android:layout_height="60dp"
        android:layout_marginStart="137dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="137dp"
        android:layout_marginBottom="36dp"
        android:text="Log in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginPageLocationField" />

</androidx.constraintlayout.widget.ConstraintLayout>